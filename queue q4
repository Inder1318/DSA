#include <iostream>
using namespace std;
int main(){
    int n;
    cin>>n;
    int stu[100],sand[100];
    for(int i=0;i<n;i++) cin>>stu[i];
    for(int i=0;i<n;i++) cin>>sand[i];
    int front=0,rear=n-1,top=n-1,count=0;
    while(front<=rear && count<=rear-front+1){
        if(stu[front]==sand[top]){
            front++; top--; count=0;
        } else {
            int temp=stu[front];
            for(int i=front;i<rear;i++) stu[i]=stu[i+1];
            stu[rear]=temp;
            count++;
        }
    }
    cout<<rear-front+1;
}
