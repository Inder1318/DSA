#include <iostream>
#include <vector>
using namespace std;

int main() {
    int n, m;
    cin >> n >> m;
    const int INF = 1000000000;
    vector<vector<int>> cost(n + 1, vector<int>(n + 1, INF));
    for (int i = 1; i <= n; i++) cost[i][i] = 0;
    for (int i = 0; i < m; i++) {
        int u, v, w;
        cin >> u >> v >> w;
        if (w < cost[u][v]) cost[u][v] = w;
    }
    int src;
    cin >> src;
    vector<int> dist(n + 1, INF);
    vector<int> visited(n + 1, 0);
    dist[src] = 0;
    for (int i = 1; i <= n; i++) {
        int u = -1;
        int best = INF;
        for (int v = 1; v <= n; v++) {
            if (!visited[v] && dist[v] < best) {
                best = dist[v];
                u = v;
            }
        }
        if (u == -1) break;
        visited[u] = 1;
        for (int v = 1; v <= n; v++) {
            if (cost[u][v] < INF && dist[u] + cost[u][v] < dist[v]) {
                dist[v] = dist[u] + cost[u][v];
            }
        }
    }
    for (int i = 1; i <= n; i++) {
        if (dist[i] == INF) cout << "INF ";
        else cout << dist[i] << " ";
    }
    return 0;
}
